#
#
# ------------------------------------------------------------------------------------------------------------
# Ip ranges 
# ------------------------------------------------------------------------------------------------------------
variable cidr_blocks {
  description = "This is the vpc cidr-blocks"
  type        =  list(string)
  default =  [
                # vpc cidrBlock
                "10.0.0.0/16",

                # subnet cidrBlock
                "10.0.0.0/20",
            ]
}
#
#
#
#
#
# ------------------------------------------------------------------------------------------------------------
# Ec2 instance
# ------------------------------------------------------------------------------------------------------------
variable instance_type {
  description = "EC2 instance type"
  type        = string
  default = "t2.micro"
}
#
#
#
#
#
# ------------------------------------------------------------------------------------------------------------
# Availability Zone name
# ------------------------------------------------------------------------------------------------------------
variable az_name {
  description = "az name"
  type        = string
  default = "us-east-1e"
}
#
#
#
#
#
# ------------------------------------------------------------------------------------------------------------
# App Environment prefix name
# ------------------------------------------------------------------------------------------------------------
variable env_prefix {
  description = "Environment Prefix"
  type        = string
  default = "dev"
}
#
#
#
#
#
# ------------------------------------------------------------------------------------------------------------
# Local machine ip
# ------------------------------------------------------------------------------------------------------------
variable  my_ip {
  type        = string
  description = "The machine ip that will connect to server"
}
#
#
#
#
#
# ------------------------------------------------------------------------------------------------------------
# Public ssh key absolute path 
# ------------------------------------------------------------------------------------------------------------
variable  public_ssh_key {
  type        = string
  description = "This is your local machine ssh-key"
}



